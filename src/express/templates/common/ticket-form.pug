section.ticket-form
  .ticket-form__wrapper
    h1.ticket-form__title= editMode ? `Редактировать публикацию` : `Новая публикация`
    .ticket-form__tile
      form(class=`ticket-form__form form` action=`#` method=`post` enctype=`multipart/form-data` autocomplete=`off`)
        div(class=`ticket-form__avatar-container js-preview-container ${editMode && offer.image ? `uploaded` : ``}`)
          .ticket-form__avatar.js-preview
            if editMode && offer.image
              img(src=`${offer.image}` srcset=`${offer.retina} 2x` alt="")
          .ticket-form__field-avatar
            input(type=`file` id=`avatar` name=`avatar` class=`visually-hidden js-file-field`)
            label(for=`avatar`)
              span.ticket-form__text-upload Загрузить фото…
              span.ticket-form__text-another Загрузить другое фото…
        .ticket-form__content
          each row in ticketFormInputs
            .ticket-form__row
              each val in row
                include ../common/form-input
          .ticket-form__row
            select(name=`category` id=`category-field` data-label=`Выбрать категорию публикации` class=`form__select js-multiple-select` multiple=``)
              each option in selectOptions
                option(value=`${option.id}` selected=option.selected)= option.title
          .ticket-form__row
            .form__field.form__field--price
              input(type=`number` name=`price` id=`price-field` class=`js-field js-price` min=`1` required=`` value= (editMode && offer.price ? offer.price : ``))
              label(for=`price-field`) Цена
              span Обязательное поле
            .form__switch.switch
              .switch__item
                input(type=`radio` id=`buy-field` name=`action` value=`buy` class=`visually-hidden` checked= (editMode && offer.type === `buy`))
                label(for=`buy-field` class=`switch__button`) Куплю
              .switch__item
                input(type=`radio` id=`sell-field` name=`action` value=`sell` class=`visually-hidden` checked= (editMode && offer.type === `sell`))
                label(for=`sell-field` class=`switch__button`) Продам
        button(class=`form__button btn btn--medium js-button` type=`submit`)= editMode ? `Сохранить` : `Опубликовать`
